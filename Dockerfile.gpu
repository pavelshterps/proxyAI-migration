# Dockerfile.gpu
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04@sha256:â€¦
RUN apt-get update \
  && apt-get install -y --no-install-recommends python3.10 python3-pip ffmpeg \
  && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
 && pip install --no-cache-dir -r requirements.txt
COPY . .
RUN useradd --create-home proxy && chown -R proxy:proxy /app
USER proxy
ENV PATH="/home/proxy/.local/bin:${PATH}"